{{ form_start(form) }}
    <div class="row">
        <div class="col-12 col-md-11 col-lg-10 col-xl-7 d-flex justify-content-start align-items-center">
            <div class="col-2 d-flex align-items-center">
                {{ form_errors(form.number) }}
                {{ form_label(form.number) }}
            </div>
            <div class="col-3 d-flex align-items-center">
                {{ form_widget(form.number) }}
            </div>
            <div class="col-2 offset-1 d-flex align-items-center">
                {{ form_errors(form.date) }}
                {{ form_label(form.date) }} 
            </div>
            <div class="col-3 d-flex align-items-center">
                {{ form_widget(form.date) }}  
            </div>
        </div>
    </div>
    <div class="row justify-content-start align-items-end mt-5">
        <div class="d-flex justify-content-start align-items-center mb-4">
            <div class="col-8 col-sm-5 col-md-4">
                <h4 class="text-primary me-5">Pièces détachées</h4>
            </div>
            <div class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-5">
                <a class="btn btn-primary btn-sm me-2"
                {% if mode == "editDeliveryNote" %}
                    href="{{ path('part_index', {'mode': mode, 'documentId': deliveryNote.id }) }}">
                {% elseif mode == "newDeliveryNote" %}
                    href="{{ path('part_index', {'mode': mode }) }}">
                {% endif %}
                Sélection pièces</a>
            </div>
        </div>
        <div class="border border-info rounded p-3">
            {{ form_errors(form.deliveryNoteParts) }}
            {% for deliveryNotePartsField in form.deliveryNoteParts %}
                {{ form_errors(deliveryNotePartsField) }}
                <div class="row justify-content-start align-items-center">
                    <div class="col-2">
                        {{ form_row(deliveryNotePartsField.quantity) }}
                    </div>
                    <div class="col-9">
                        {{ form_row(deliveryNotePartsField.part) }}
                    </div>
                </div>
            {% else %}
                <p>Il n'y a pas de pièce détachée sélectionnée.</p>
            {% endfor %}
        </div>
    </div>
    <div class="row mt-3 mb-5">
        <div class="col-3 text-center">
            <button type="submit" class="btn btn-primary pull-right w-100 mt-3">{{ button_label }}</button>
        </div>
    </div>
{{ form_end(form) }}

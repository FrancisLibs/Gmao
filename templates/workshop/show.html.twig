{% extends 'base.html.twig' %}

{% block title %}Atelier{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-6 mx-auto">
            <div class="row align-items-center">
                <div class="col-4">
                    <h3>Pièce détachée</h3>
                </div>
                <div class="d-flex justify-content-start">
                    <a class="btn btn-primary btn-sm mr-2" href="{{ path('workshop_index') }}" role="button">Liste ateliers</a>
                    <a class="btn btn-primary btn-sm mr-2" href="{{ path('workshop_edit', {'id': workshop.id}) }}">Edition</a>

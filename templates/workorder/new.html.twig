{% extends 'base.html.twig' %}

{% block title %}Nouveau bon de travail{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-3 offset-2 d-flex justify-content-between align-items-center">
            <h2>Nouveau BT</h2>
            {# <a class="btn btn-primary btn-sm" href="{{ path('work_order_index') }}" role="button">Listes des BT</a> #}
        </div>
        <div class="col-2 offset-2 text-right">
            <h5>{{ workorder.createdAt|date('d-m-Y') }}</h5>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-8 offset-2 mb-4">
            <div class="row mt-2 mb-2">
                <div class="col-7 d-flex justify-content-start">
                    <h4 class="text-primary mr-5">Machine</h4>
                    <a class="btn btn-primary btn-sm mr-5" href="{{ path('machine_index', {'mode': 'newWorkorder'}) }}" role="button">Choix de la Machine</a>
                    {% if workorder.machines is not empty %}
                        <div class="case_machine">
                            {% for machine in workorder.machines %}
                                {{ machine.designation }}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
            {{ include('workorder/_form.html.twig') }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('newWorkorder') }}
{% endblock %}



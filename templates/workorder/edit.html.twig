{% extends 'base.html.twig' %}

{% block title %}Edition bon de travail{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-7 offset-2">
            <div class="row">
                <div class="col-7 d-flex justify-content-between align-items-center">
                    {% if workorder.preventive %}
                        <h2>Edition bon de travail préventif</h2>
                    {% else %}
                        <h2>Edition bon de travail</h2>
                    {% endif %}
                <div class="d-flex justify-content-start">
                    <a class="btn btn-primary btn-sm me-3" href="{{ path('work_order_show', {'id': workorder.id}) }}" role="button">Retour au BT</a>
                    <a class="btn btn-primary btn-sm me-3" href="{{ path('work_order_index') }}" role="button">Liste des BT</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        {{ include('workorder/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <aside class="col-2 mt-5">
            {% include 'user/_photo.html.twig' %}
        </aside>
        <div class="col-6">
            <div class="row mt-5">
                <div class="col-5 d-flex justify-content-start">
                    <h4 class="text-primary me-5">Technicien</h4>
                    <h4>{{ workorder.user.firstName ~ "  " ~ workorder.user.lastName }}</h4>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-5 d-flex justify-content-start align-items-center">
                    <h4 class="text-primary me-5">Machine(s)</h4>
                    {% if not workorder.preventive %}
                        <a class="btn btn-primary btn-sm" href="{{ path('machine_index', {'mode': 'modif', 'documentId': workorder.id}) }}" role="button">Changer de machine</a>
                    {% endif %}
                </div>
                <div class="col-6 d-flex justify-content-start align-items-center">
                    <table class="table table-sm table-striped">
                        <thead>
                            <th>Code</th>
                            <th class="text-center">Désignation</th>
                        </thead>
                        <tbody>
                            {% for machine in workorder.machines %}
                                <tr>
                                    <td>{{ machine.internalCode }}</td>
                                    <td class="text-center">{{ machine.designation }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-12">
                    {# {% if edit %}
                        {{ include('workorder/_formModif.html.twig') }}
                    {% else %}
                        {{ include('workorder/_form.html.twig') }}
                    {% endif %} #}
                    {{ include('workorder/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('editWorkorder') }}
{% endblock %}
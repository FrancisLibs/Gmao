                        </div>
                        <div class="col-5">
                            {{ form_errors(form.arrivalTime) }} 
                            {{ form_label(form.arrivalTime) }}  
                            {{ form_widget(form.arrivalTime) }}  
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6">
            <h4 class="text-primary">Intervention</h4>
            <div class="row">
                <div class="col-12 border border-warning rounded p-3">
                    <div class="col-12">
                        {{ form_errors(form.reason) }} 
                        {{ form_label(form.reason) }}  
                        {{ form_widget(form.reason) }}  
                    </div>
                    <div class="col-12 mt-2">
                        {{ form_errors(form.task) }} 
                        {{ form_label(form.task) }}  
                        {{ form_widget(form.task) }}  
                    </div>
                    <div class="col-12">

{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
     <header class="row mt-4">
        <div class="col-2 offset-2">
            <h3>Service </h3>
        </div>
    </header>
    <div class="row workorder-js-filter">
        <aside class="col-2 mt-4">
            <section>
                <a class="btn btn-primary btn-sm mb-3" href="{{ path('service_new') }}" role="button">Nouveau service</a>
            </section>
            {% include 'user/_photo.html.twig' %}
        </aside>
        <article class="col-10">
            <div class="mt-4">
                {% include 'service/_serviceList.html.twig' with {services: services} only %}
            </div>
        </article>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.Name }}</td>
                <td>
                    <a href="{{ path('service_show', {'id': service.id}) }}">show</a>
                    <a href="{{ path('service_edit', {'id': service.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

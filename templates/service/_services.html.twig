{% for service in services %}
    <tr>
        <td class="font_size_table">
            <a class="btn btn-sm btn-primary" href="{{ path('service_show', {'id': service.id}) }}">{{ service.id }}</a>
        </td>
        <td class="text-center font_size_table">
            {% for machine in workorder.machines %}
                {{ machine.designation}}
            {% endfor %}    
        </td>
        <td class="text-center font_size_table">{{ workorder.user.firstName }}</td>
        {% if workorder.preventive %}
            <td class="text-center font_size_table">{{ workorder.preventiveDate ? workorder.preventiveDate|date('d-m-Y') : '' }}</td>
        {% else %}
            <td class="text-center font_size_table">{{ workorder.createdAt ? workorder.createdAt|date('d-m-Y') : '' }}</td>
        {% endif %}
        <td class="text-center font_size_table">{{ workorder.request }}</td>
        <td class="text-center font_size_table">{{ workorder.workorderStatus.name }}</td>
    </tr>
{% else %}
    <tr>
        <td colspan="6">Il n'y a pas de bons de travail enregistr√©</td>
    </tr>
{% endfor %}
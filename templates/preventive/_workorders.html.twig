{% for workorder in workorders %}
    <tr>
        <td class="font_size_table">
            <a href="{{ path('preventive_show', {'id': workorder.id}) }}">{{ workorder.templateNumber }}</a>
        </td>
        <td class="text-center font_size_table">{{ workorder.request }}</td>
        <td class="d-flex justify-content-start flex-wrap text-center font_size_table">
            {% for machine in workorder.machines %}
                <div class="d-inline justify-content-start">
                    <span class="border-secondary rounded border mr-2 px-1">{{ machine.designation}}<span>
                </div>
            {% endfor %}    
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="6">Il n'y a pas de bons de travail enregistr√©</td>
    </tr>
{% endfor %}
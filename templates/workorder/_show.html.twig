
<div class="row">
    <div class="col-5 d-flex justify-content-between">
        <div>
            <span>Créé le</span>
            <span class="champs_bt text-center">{{ workorder.createdAt ? workorder.createdAt|date('d-m-Y H:i:s', timezone="Europe/Paris") : '' }}</span>
        </div>
        <div>
            <span>Par</span>
            <span class="champs_bt text-center">{{ workorder.user.firstName }}</span>
        </div>
        <div>
            <span>Statut</span>
            <span class="champs_bt text-center">{{ workorder.status }}</span>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-6">
        <div class="row">
            <div class="col-12">
                <p>Machine</p>
                {% for machine in workorder.machines %}
                    <p class="champs_bt">{{ machine.designation }}</p>
                {% endfor %}
            </div>
            <div class="col-12">
                {% if workorder.request %}
                    <p>Demande</p>
                    <p class="champs_bt">{{ workorder.request }}</p>
                {% endif %}
                <p>Réalisation</p>
                <p class="champs_bt">{{ workorder.implementation }}</p>
                {% if workorder.remark %}
                    <p>Remarque</p>
                    <p class="champs_bt">{{ workorder.remark }}</p>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-3">
                        <p>Date début</p>
                        <p class="champs_bt text-center">{{ workorder.startDate ? workorder.startDate|date('d-m-Y', timezone="Europe/Paris") : '' }}</p>
                    </div>
                    <div class="col-3">
                        <p>Heure début</p>
                        <p class="champs_bt text-center">{{ workorder.startTime ? workorder.startTime|date('H:i:s', timezone="Europe/Paris") : '' }}</p>
                    </div>
                    <div class="col-3">
                        <p>Date fin</p>
                        <p class="champs_bt text-center">{{ workorder.endDate ? workorder.endDate|date('d-m-Y', timezone="Europe/Paris") : '' }}</p>
                    </div>
                    <div class="col-3">
                        <p>Heure de fin</p>
                        {% if workorder.endTime %}
                            <p class="champs_bt text-center">{{ workorder.endTime ? workorder.endTime|date('H:i:s', timezone="Europe/Paris") : ''  }}</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-5 mt-2 mb-3 border rounded border-primary pt-2">
        <h5>Pièces détachées</h5>
        {% if workorder.workorderParts is not empty %}
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th scope="col">Code</th>
                        <th class="text-center">Qte</th>
                        <th class="text-center" scope="col">Désignation</th>
                    </tr>
                </thead>
                <tbody>
                    {% for part in workorder.workorderParts %}
                        <tr>
                            <td>
                                {{ part.part.code }}
                            </td>
                            <td class="text-center" s>
                                {{ part.quantity }}
                            </td>
                            <td class="text-center" s>
                                {{ part.part.designation }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            Il n'y a pas de pièces dans ce BT
        {% endif %}
    </div>
</div>



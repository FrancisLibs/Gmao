{% for workorder in workorders %}
    <tr>
        <td class="font_size_table">
            <a href="{{ path('work_order_show', {'id': workorder.id}) }}">{{ workorder.id }}</a>
        </td>
        <td class="text-center font_size_table">
            {% for machine in workorder.machines %}
                {{ machine.designation}}
            {% endfor %}    
        </td>
        <td class="text-center font_size_table">{{ workorder.user.firstName }}</td>
        <td class="text-center font_size_table">{{ workorder.createdAt ? workorder.createdAt|date('Y-m-d') : '' }}</td>
        <td class="text-center font_size_table">{{ workorder.request }}</td>
    </tr>
{% else %}
    <tr>
        <td colspan="6">Il n'y a pas de bons de travail enregistr√©</td>
    </tr>
{% endfor %}
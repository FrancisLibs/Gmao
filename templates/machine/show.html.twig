{% extends 'base.html.twig' %}

{% block title %}Machine{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-6 mx-auto">
            <div class="row align-items-center">
                <div class="col-4">
                    <h1>Machine</h1>
                </div>
                <div class="d-flex justify-content-start">
                    <a class="btn btn-primary btn-sm mr-2" href="{{ path('machine_index') }}" role="button">Liste pièces</a>
                    <a class="btn btn-primary btn-sm mr-2" href="{{ path('machine_edit', {'id': machine.id}) }}">Edition</a>
                    {{ include('machine/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
    <article class="row">
        <div class="col-6 mx-auto mt-4">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Désignation</th>
                        <td>{{ machine.designation }}</td>
                    </tr>
                    <tr>
                        <th>Constructeur</th>
                        <td>{{ machine.constructor }}</td>
                    </tr>
                    <tr>
                        <th>Modèle</th>
                        <td>{{ machine.model }}</td>
                    </tr>
                    <tr>
                        <th>Numéro de série</th>
                        <td>{{ machine.serialNumber }}</td>
                    </tr>
                    <tr>
                    <th>Status</th>
                        <td>{{ machine.status }}</td>
                    </tr>
                     <th>Atelier</th>
                        <td>{{ machine.workshop.name }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </article>
{% endblock %}
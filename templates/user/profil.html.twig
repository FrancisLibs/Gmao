{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-5 mt-5 mx-auto">
                <div class="row align-items-center mb-4">
                    <div class="col-3">
                        <h1>Profil</h1>
                    </div>
                    <div class="col-3">
                        <a class="btn btn-primary btn-sm" href="{{ path('user_edit', {'id': user.id}) }}" role="button">Modification</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-5 mx-auto">
                <div>
                    <p class="profil-font-size">Identifiant : {{ user.username}}</p>
                    <p class="profil-font-size">Organisation : {{ user.organisation.designation}}</p>
                    <p class="profil-font-size">Nom : {{ user.firstName ~ " " ~ user.lastName}}</p>
                    <p class="profil-font-size">Email : {{ user.email }}</p>
                    <p class="profil-font-size">Téléphone : {{ user.phoneNumber }}</p>
                    <p class="profil-font-size">Roles :
                    {% for role in user.roles %}
                        {{ role }}
                    {% endfor %}
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
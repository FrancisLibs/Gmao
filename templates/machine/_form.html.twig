{{ form_start(form) }}  
    <div class="row mb-2">
        <div class="col-3">
            {{ form_label(form.internalCode) }}
            {{ form_widget(form.internalCode) }}
        </div>
        <div class="col-8 pt-4">
           <p>Le code doit être composé de 6 lettres (abréviation du type de la machine), 
           puis de 3 chiffres (numéro d'ordre n'existant pas encore), 
           puis des deux derniers chiffres de l'année de création.</p>
        </div>
    </div>
    <div class="row mb-4">
         <div class="col-6">
            {{ form_label(form.designation) }}  
            {{ form_widget(form.designation) }}  
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-3">
            {{ form_label(form.constructor) }}  
            {{ form_widget(form.constructor) }}  
        </div>
        <div class="col-6">
            {{ form_label(form.model) }}
            {{ form_widget(form.model) }}
        </div>
    </div>
    <div class="row d-flex align-items-baseline mb-4">
        <div class="col-5">
            {{ form_label(form.serialNumber) }}
            {{ form_widget(form.serialNumber) }}
        </div>
        <div class="col-4">
            {{ form_label(form.workshop) }}
            {{ form_widget(form.workshop) }}
        </div>
    </div>
    <div class="row d-flex align-items-baseline mb-4">
        <div class="col-3">
            {{ form_label(form.BuyDate) }}
            {{ form_widget(form.BuyDate) }}
        </div>
    </div>
    <div class="row">
        <div class="col-3 text-center">
            <button type="submit" class="btn btn-primary pull-right w-100 mt-3">Valider</button>
        </div>
    </div>
{{ form_end(form) }}


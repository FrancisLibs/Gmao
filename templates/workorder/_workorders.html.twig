        <td><a href="{{ path('work_order_show', {'id': workorder.id}) }}">{{ workorder.machine.designation}}</a></td>
        <td class="text-center">{{ workorder.user.firstName }}</td>
        <td class="text-center">{{ workorder.createdAt ? workorder.createdAt|date('Y-m-d') : '' }}</td>
        <td class="text-center">{{ workorder.request }}</td>
    </tr>
{% else %}

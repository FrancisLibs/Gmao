{% extends 'base.html.twig' %}

{% block title %}Gmao PS bienvenue !{% endblock %}

{% block body %}
    <div class="row mt-5 justify-content-start">
        <section class="col-3">
            <h1 class="text-danger text-center mb-3">La team</h1>
            <div class="d-flex justify-content-around flex-wrap">
                {% for user in users %}
                    {% if user == app.user %}
                        <div class="border border-info rounded p-1 m-1">
                    {% else %}
                        <div>
                    {% endif %}
                        {% if user.imageName %}
                            <img src="{{ vich_uploader_asset(user, 'imageFile') | imagine_filter('my_default_filter') }}" alt="Photo d'identité de {{ user.username }}" />
                        {% else %}
                            <img src="{{ asset('/images/technicien.jpg') | imagine_filter('my_default_filter') }}" alt="Photo d'identité de {{ user.username }}" />
                        {% endif %}
                        <p class="text-center">{{ user.firstName ~ " " ~ user.lastName }}</p>
                    </div>
                {% endfor %}
            </div>
        </section>
        <section class="col-8">
            <div class="row mb-3">
                <div class="col-3">
                    <h3>BT en cours</h3>
                </div>
                <div class="col-2">
                    <a href="{{ path('work_order_new') }}" class="btn btn-primary btn-sm">Nouveau BT</a>
                </div>
            </div>
            {% include('default/_inProgressWorkorder.html.twig') %}
            {# display navigation #}
            {# <div class="navigation">
                {{ knp_pagination_render(workorders) }}
            </div> #}
        </section>
        <aside class="col-2">
        </aside>
    </div>
{% endblock %}


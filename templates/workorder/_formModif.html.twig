{{ form_start(form) }} 
    <div class="row mt-4 border p-3">
        <div class="col-12">
            <div class="row">
                <div class="col-12 text-primary">
                    <h4>Machine</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-5">
                    {{ form_label(form.machine) }}  
                    {{ form_widget(form.machine) }}  
                </div>
                <div class="col-3">
                    {{ form_label(form.type) }}  
                    {{ form_widget(form.type) }}  
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3 border p-3">
        <div class="col-12">
            <div class="row">
                <div class="col-12 text-primary">
                    <h4>Intervention</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-1 d-flex align-items-center mt-4">
                    <button class="btn btn-success mr-4 btn-sm" id="btn_copy">copy</button>
                </div>
                <div class="col-11">
                    <div class="row">
                        <div class="col-12">
                            {{ form_label(form.request) }}  
                            {{ form_widget(form.request) }}  
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            {{ form_label(form.implementation) }}  
                            {{ form_widget(form.implementation) }}  
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    {{ form_label(form.remark) }}  
                    {{ form_widget(form.remark) }}  
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3 border p-3">
        <div class="col-12">
            <div class="row">
                <div class="col-12 text-primary">
                    <h4>Temps</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <span>Date début</span>
                    {{ form_label(form.startDate) }}
                    {{ form_widget(form.startDate) }}
                </div>
                <div class="col-2">
                    <span>Heure début</span>
                    {{ form_label(form.startTime) }}
                    {{ form_widget(form.startTime) }}
                </div>
                <div class="col-3">
                    <span>Durée</span>
                    {{ form_label(form.duration) }}
                    {{ form_widget(form.duration) }}
                </div>
            </div>
            <div class="row pt-2">
                <div class="col-3">
                    <span>Date fin</span>
                    {{ form_label(form.endDate) }}
                    {{ form_widget(form.endDate) }}
                </div>
                <div class="col-2">
                    <span>Heure fin</span>
                    {{ form_label(form.endTime) }}
                    {{ form_widget(form.endTime) }}
                </div>
                <div class="col-3">
                    <span>Arrêt machine</span>
                    {{ form_label(form.machineStopTime) }}
                    {{ form_widget(form.machineStopTime) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3 text-center">
            <button type="submit" class="btn btn-primary pull-right w-100 mt-3">Valider</button>
        </div>
    </div>
{{ form_end(form) }}
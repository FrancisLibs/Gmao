{% extends 'base.html.twig' %}

{% block title %}Nouveau bon de travail{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-8 mx-auto">
            <div class="row align-items-center">
                <div class="col-4 d-flex justify-content-between align-items-center">
                    <h2>Nouveau BT</h2>
                    <a class="btn btn-primary btn-sm" href="{{ path('work_order_index') }}" role="button">Listes des BT</a>
                </div>
                <div class="col-5 offset-3 d-flex justify-content-end align-items-center">

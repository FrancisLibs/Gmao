{% extends 'base.html.twig' %}

{% block title %}Pièce détachée{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-6 mx-auto">
            <div class="row align-items-center">
                <div class="col-4">
                    <h3>Pièce détachée</h3>
                </div>
                <div class="d-flex justify-content-start">
                    <a class="btn btn-primary btn-sm mr-2" href="{{ path('part_index') }}" role="button">Liste pièces</a>
                    <a class="btn btn-primary btn-sm mr-2" href="{{ path('part_edit', {'id': part.id}) }}">Edition</a>
                    {{ include('part/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
    <article class="row">
        <div class="col-6 mx-auto mt-4">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Code</th>
                        <td>{{ part.code }}</td>
                    </tr>
                    <tr>
                        <th>Designation</th>
                        <td>{{ part.designation }}</td>
                    </tr>
                    <tr>
                        <th>Reference</th>
                        <td>{{ part.reference }}</td>
                    </tr>
                    <tr>
                        <th>Qte Stock</th>
                        <td>{{ part.stock.qteStock }}</td>
                    </tr>
                    <tr>
                        <th>Qte Min Stock</th>
                        <td>{{ part.stock.qteMin }}</td>
                    </tr>
                    <tr>
                        <th>Qte Max Stock</th>
                        <td>{{ part.stock.qteMax }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </article>
{% endblock %}
{{ form_start(form) }}
    <div class="row p-3 interventions">
        <div class="col-12">
            <div class="row">
                <div class="text-primary">
                    <h4>Intervention</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    {{ form_label(form.request) }}  
                    {{ form_widget(form.request) }}  
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    {{ form_label(form.remark) }}  
                    {{ form_widget(form.remark) }}  
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3 text-primary ">
            <h4>Calendrier</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            {{ form_label(form.schedule.period) }}  
            {{ form_widget(form.schedule.period) }} 
        </div>
        <div class="col-3">
            {{ form_label(form.schedule.nextDate) }}  
            {{ form_widget(form.schedule.nextDate) }} 
        </div>
        <div class="col-3">
            {{ form_label(form.schedule.daysBefore) }}  
            {{ form_widget(form.schedule.daysBefore) }} 
        </div>
        <div class="col-3">
            {{ form_label(form.schedule.duration) }}  
            {{ form_widget(form.schedule.duration) }} 
        </div>
    </div>
    <div class="row">
        <div class="col-3 text-center mt-4 mb-5">
            <button type="submit" class="btn btn-primary pull-right w-100 mt-3">Valider</button>
        </div>
    </div>
{{ form_end(form) }}
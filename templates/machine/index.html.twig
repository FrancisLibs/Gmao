{% extends 'base.html.twig' %}

{% block title %}Liste machines{% endblock %}

{% block body %}
    <main class="row mt-5">
        <article class="col-10 mx-auto">
            <div class="row align-items-center">
                <div class="col-3">
                    <h3>Machines</h3>
                </div>
                <div class="col-3">
                    <a class="btn btn-primary btn-sm" href="{{ path('machine_new') }}" role="button">Nouvelle machine</a>
                </div>
            </div>
            <div class="mt-5">
                {% include 'machine/_machineList.html.twig' with {machines: machines} only %}
            </div>
            {# display navigation #}
            <div class="navigation">
                {{ knp_pagination_render(machines) }}
            </div>
        </article>
    </main>
{% endblock %}
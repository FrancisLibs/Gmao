                            {{ form_errors(form.callDay) }} 
                            {{ form_label(form.callDay) }}  
                            {{ form_widget(form.callDay) }}  
                        </div>
                        <div class="col-5">
                            {{ form_errors(form.callTime) }}
                            {{ form_label(form.callTime) }}
                            {{ form_widget(form.callTime) }}
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-11">
                            {{ form_errors(form.whoCalls) }} 
                            {{ form_label(form.whoCalls) }}  
                            {{ form_widget(form.whoCalls) }}  
                        </div>
                    </div>
                </div>
            </div>
            <h4 class="text-primary mt-4">Trajet</h4>
            <div class="row">
                <div class="col-11 border border-warning rounded p-3">
                    <div class="row mb-3">
                        <div class="col-2 mt-1">

{{ form_start(form) }}
    <div class="row">
        <div class="col-12">
            <div class="row mt-4 interventions">
                <div class="col-2">
                    <h4 class="text-primary">Demande</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-10"> 
                    {{ form_widget(form.request) }}  
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="row mt-4 interventions">
                <div class="col-2">
                    <h4 class="text-primary">Remarque</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-10"> 
                    {{ form_widget(form.remark) }}  
                </div>
            </div>
        </div>
    </div>
   

    <div class="row">
        <div class="text-primary mt-4">
            <h4>Calendrier</h4>
        </div>
    </div>
        <div class="row">
            <div class="col-11 d-flex justify-content-between">
                <div class="caseTemps">
                    {{ form_label(form.period) }}  
                    {{ form_widget(form.period) }} 
                </div>
                <div class="caseTemps">
                    {{ form_label(form.nextDate) }}  
                    {{ form_widget(form.nextDate) }} 
                </div>
                <div class="caseTemps">
                    {{ form_label(form.daysBefore) }}  
                    {{ form_widget(form.daysBefore) }} 
                </div>
                <div class="caseTemps">
                    {{ form_label(form.daysBeforeLate) }}  
                    {{ form_widget(form.daysBeforeLate) }} 
                </div>
                <div class="caseTemps">
                    {{ form_label(form.duration) }}  
                    {{ form_widget(form.duration) }} 
                </div>
                <div class="caseTemps">
                    {{ form_label(form.sliding) }}  
                    {{ form_widget(form.sliding) }} 
                </div>
            </div>
        </div>
        <div class="row mt-3 justify-content-between">
            <div class="col-3 text-center ml-4">
                <button type="submit" class="btn btn-primary pull-right w-100 mt-3">Valider</button>
            </div>
            <div class="col-7 text-right mt-2">
                <p>Glissant : La prochaine date d'éxecution sera calculée à partir de la date de réalisation</p>
            </div>
        </div>
    </div>
{{ form_end(form) }}
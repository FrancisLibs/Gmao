{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 mt-4 mb-4">
                <div class="row mb-4">
                    <div class="col-4 mx-auto">
                        {% for flashError in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}
                        <h2>Inscription</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8 mt-4 mb-4 mx-auto">
                        {% include('registration/_userInscriptionForm.html.twig') %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{{ form_start(form) }}
    <div class="row">
        <h4 class="col-2 text-primary">Infos :</h4>
    </div>
    <div class="row mt-3">
        <div class="col-5 d-flex justify-content-start align-items-center">
            <div class="mr-3">
                {{ form_errors(form.number) }}
                {{ form_label(form.number) }}
            </div>
            <div class="col-7">
                {{ form_widget(form.number) }}
            </div>
        </div>
        <div class="col-5 d-flex justify-content-start align-items-center">
            <div class="mr-3">
                {{ form_errors(form.date) }}
                {{ form_label(form.date) }} 
            </div>
            <div class="col-6">
                {{ form_widget(form.date) }}  
            </div>
        </div>
    </div>
    <div class="row justify-content-start align-items-end mt-5">
        <div class="col-8">
            <div class="d-flex justify-content-start mb-4">
                <h4 class="text-primary mr-5">Pièces détachées</h4>
                {% if mode == "editDeliveryNote" %}
                    <a class="btn btn-primary btn-sm mr-2" href="{{ path('part_index', {'mode': mode, 'documentId': deliveryNote.id }) }}">Sélection pièces</a>
                {% elseif mode == "newDeliveryNote" %}
                    <a class="btn btn-primary btn-sm mr-2" href="{{ path('part_index', {'mode': mode }) }}">Sélection pièces</a>
                {% endif %}
            </div>
            {{ form_errors(form.deliveryNoteParts) }}
            {% for deliveryNotePartsField in form.deliveryNoteParts %}
                {{ form_errors(deliveryNotePartsField) }}
                <div class="row justify-content-start align-items-center">
                    <div class="col-2">
                        {{ form_row(deliveryNotePartsField.quantity) }}
                    </div>
                    <div class="col-9">
                        {{ form_row(deliveryNotePartsField.part) }}
                    </div>
                </div>
            {% else %}
                <p>Il n'y a pas de pièce détachée sélectionnée.</p>
            {% endfor %}
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-3 text-center">
            <button type="submit" class="btn btn-primary pull-right w-100 mt-3">{{ button_label }}</button>
        </div>
    </div>
{{ form_end(form) }}
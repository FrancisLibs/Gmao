{% extends 'base.html.twig' %}

{% block title %}Edition bon de travail{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-8 mx-auto">
            <div class="row align-items-center">
                <div class="col-6">
                    {% if workorder.preventive %}
                        <h2>Edition bon de travail pr√©ventif</h2>
                    {% else %}
                        <h2>Edition bon de travail</h2>
                    {% endif %}
                </div>
                <div class="d-flex justify-content-start">
                    <a class="btn btn-primary btn-sm mr-3" href="{{ path('work_order_index') }}" role="button">Liste des BT</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        {{ include('workorder/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <article class="row">
        <div class="col-8 offset-2 mt-4">
            <div class="row align-items-center">
                <div class="col-2 text-primary">
                    <h4>Machine</h4>
                </div>
                 <div class="col-4">
                    {% for machine in workorder.machines %}
                        {{ machine.designation }}
                    {% endfor %}
                </div>
                <div class="col-3">
                    <a class="btn btn-primary btn-sm" href="{{ path('machine_index', {'mode': 'modif', 'workorderId': workorder.id}) }}" role="button">Changer de machine</a>
                </div>
            </div>
            
            {% if edit %}
                {{ include('workorder/_formModif.html.twig') }}
            {% else %}
                {{ include('workorder/_form.html.twig') }}
            {% endif %}
        </div>
    </article>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('editWorkorder') }}
{% endblock %}
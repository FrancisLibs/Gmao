{% extends 'base.html.twig' %}

{% block title %}WorkOrder{% endblock %}

{% block body %}
    <h1>WorkOrder</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ work_order.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ work_order.createdAt ? work_order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ work_order.status }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ work_order.startDate ? work_order.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ work_order.endDate ? work_order.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ work_order.subject }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ work_order.duration ? work_order.duration|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>MachineStop</th>
                <td>{{ work_order.machineStop ? work_order.machineStop.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
            </tr>
            <tr>
                <th>StartTime</th>
                <td>{{ work_order.startTime ? work_order.startTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndTime</th>
                <td>{{ work_order.endTime ? work_order.endTime|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('work_order_index') }}">back to list</a>

    <a href="{{ path('work_order_edit', {'id': work_order.id}) }}">edit</a>


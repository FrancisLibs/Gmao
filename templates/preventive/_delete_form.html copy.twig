<form method="post" action="{{ path('template_delete', {'id': template.id}) }}" onsubmit="return confirm('Veux-tu vraiment supprimer ce template ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ template.id) }}">
    <button class="btn btn-danger btn-sm">Supprimer</button>
</form>

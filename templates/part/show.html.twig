{% extends 'base.html.twig' %}

{% block title %}Pièce détachée{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-4 offset-2 mb-3 d-flex justify-content-between align-items-center">
            <h3>Pièce détachée</h3>
            <div class="d-flex justify-content-start">
                <a class="btn btn-primary btn-sm me-2" href="{{ path('part_index') }}" role="button">Liste pièces</a>
                <a class="btn btn-primary btn-sm me-2" href="{{ path('part_edit', {'id': part.id}) }}">Edition</a>
                <a class="btn btn-warning btn-sm me-2" href="{{ path('part_label', {'id': part.id}) }}">Etiquette</a>
                {{ include('part/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
    <article class="row">
        <div class="d-flex justify-content-start">
            <aside class="col-2">
                {{ include('user/_photo.html.twig') }}
            </aside>
            <div class="col-5">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Code</th>
                            <td>{{ part.code }}</td>
                        </tr>
                        <tr>
                            <th>Designation</th>
                            <td>{{ part.designation }}</td>
                        </tr>
                        <tr>
                            <th>Reference</th>
                            <td>{{ part.reference }}</td>
                        </tr>
                        {% if part.provider %}
                            <tr> 
                                <th>Fournisseur</th>
                                <td>{{ part.provider.name }}</td>
                            </tr>
                        {% endif %}
                        <tr>
                            <th>Qte Stock</th>
                            <td>{{ part.stock.qteStock }}</td>
                        </tr>
                        <tr>
                            <th>Qte Min Stock</th>
                            <td>{{ part.stock.qteMin }}</td>
                        </tr>
                        <tr>
                            <th>Qte Max Stock</th>
                            <td>{{ part.stock.qteMax }}</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>{{ part.steadyPrice }}€</td>
                        </tr>
                            <tr>
                            <th>Remarque</th>
                            <td>{{ part.remark }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </article>
{% endblock %}